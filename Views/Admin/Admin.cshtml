@model MyNewProject.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Welcome, @Model.UserName</h2>
<p>Email: @Model.Email</p>

<h3>Uploaded Products</h3>

@if (Model.Products.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <img src="@product.ImagePath" alt="@product.ProductName" style="width: 100px; height: 100px;" />
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No products have been uploaded yet.</p>
}

<p>
    <a class="btn btn-success" asp-controller="Admin" asp-action="UploadProduct">Upload New Product</a>
</p>
